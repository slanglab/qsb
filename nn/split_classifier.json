{
  "dataset_reader": {
    "type": "binary_reader"
  },
  "train_data_path": "/mnt/nfs/work1/brenocon/ahandler/qsr/lstm_train_3way.jsonl",
  "validation_data_path": "/mnt/nfs/work1/brenocon/ahandler/qsr/lstm_validation_3way.jsonl",
  "model": {
    "type": "split_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "abstract_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "classifier_feedforward_p": {
      "input_dim": 200,
      "num_layers": 1,
      "hidden_dims": [2],
      "activations": ["sigmoid"],
      "dropout": [0.2]
    },
    "classifier_feedforward_i": {
      "input_dim": 200,
      "num_layers": 1,
      "hidden_dims": [2],
      "activations": ["sigmoid"],
      "dropout": [0.2]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    "batch_size": 64
  },
  "trainer": {
    "optimizer": {
        "type": "adam",
        "lr": 0.0004,
        "weight_decay": 0.04 
    },
    "num_epochs": 10,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy"
  }
}
